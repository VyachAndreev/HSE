<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  TextMotserrat  -->
    <style name="TextMotserrat">
        <item name="fontFamily">@font/montserrat</item>
    </style>
    <style name="TextMotserrat.Big" parent="TextMotserrat">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextMotserrat.Big.Black" parent="TextMotserrat.Big">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  TextProximaRegular  -->
    <style name="TextProximaRegular">
        <item name="fontFamily">@font/proxima_nova_regular</item>
    </style>
    <style name="TextProximaRegular.Small" parent="TextProximaRegular">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextProximaRegular.Normal" parent="TextProximaRegular">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextProximaRegular.Normal.Blue" parent="TextProximaRegular.Normal">
        <item name="android:textColor">@color/blue</item>
    </style>

    <!--  TextProximaSemibold  -->
    <style name="TextProximaSemibold">
        <item name="fontFamily">@font/proxima_nova_semibold</item>
    </style>

    <!--  TextProximaBold  -->
    <style name="TextProximaBold">
        <item name="fontFamily">@font/proxima_nova_bold</item>
    </style>
</resources>